<Page
    x:Class="revit_mcp_plugin.UI.CommandSetSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:revit_mcp_plugin.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/HandyControl;component/themes/skindefault.xaml" />
                <ResourceDictionary Source="/HandyControl;component/themes/theme.xaml" />
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Title  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,15">
            <TextBlock
                HorizontalAlignment="Left"
                FontSize="22"
                Style="{StaticResource TextBlockTitle}"
                Text="Command Set Settings" />
            <TextBlock
                Margin="0,5,0,0"
                HorizontalAlignment="Left"
                Foreground="{StaticResource SecondaryTextBrush}"
                Style="{StaticResource TextBlockDefault}"
                Text="Select the commands you want to enable" />
        </StackPanel>
        <!--  Main Content Area  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Command Set List  -->
            <Border
                Grid.Column="0"
                BorderBrush="#e0e0e0"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Padding="10,8"
                        Background="#f0f0f0"
                        FontWeight="SemiBold"
                        Text="Available Command Sets" />
                    <ListBox
                        x:Name="CommandSetListBox"
                        Grid.Row="1"
                        BorderThickness="0"
                        SelectionChanged="CommandSetListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,3,0,0"
                                        Foreground="#666"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            <!--  Command Set Features List  -->
            <Border
                Grid.Column="1"
                Margin="10,0,0,0"
                BorderBrush="#e0e0e0"
                BorderThickness="0,1,1,1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        x:Name="FeaturesHeaderTextBlock"
                        Grid.Row="0"
                        Padding="10,8"
                        Background="#f0f0f0"
                        FontWeight="SemiBold"
                        Text="Feature List" />
                    <ListView
                        x:Name="FeaturesListView"
                        Grid.Row="1"
                        BorderThickness="0"
                        Style="{StaticResource ListView.Small}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="50"
                                    Header="Enable">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox
                                                HorizontalAlignment="Center"
                                                IsChecked="{Binding Enabled, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding CommandName}"
                                    Header="Name" />
                                <GridViewColumn
                                    Width="280"
                                    DisplayMemberBinding="{Binding Description}"
                                    Header="Description" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--  Displayed when no command set is selected  -->
                    <TextBlock
                        x:Name="NoSelectionTextBlock"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#999"
                        Text="Please select a command set from the left to view its commands"
                        TextWrapping="Wrap"
                        Visibility="Collapsed" />
                </Grid>
            </Border>
        </Grid>
        <!--  Bottom Buttons  -->
        <hc:UniformSpacingPanel
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Click="OpenFolderButton_Click"
                Content="Open CommandSet Folder" />
            <Button
                Click="RefreshButton_Click"
                Content="Refresh" />
            <Button
                Click="SelectAllButton_Click"
                Content="Select All" />
            <Button
                Click="UnselectAllButton_Click"
                Content="Deselect All" />
            <Button
                Background="{StaticResource PrimaryBrush}"
                Click="SaveButton_Click"
                Content="Save"
                Foreground="White" />
        </hc:UniformSpacingPanel>
    </Grid>
</Page>